<div class="row title">
<div class="col">
 <h1><%= @event.title %></h1>
 <h2><%= @event.price %></h2>
 <%= @event.location %>
 <%= @event.desc %>
 <%= @event.date %>
</div>
</div>

<div class="row title">
 <h4>Comments</h4>
</div>

<div class="row title">
<div class="col-md-6 col-md-offset-3">
  <% if @event.date < DateTime.now() || current_user.admin? %> 
    <%= render :partial => 'comments/form', locals: {user_id: current_user.id, event_id: @event.id} %>
  <%end%>
  <%= render @event.comments %>
</div>
</div>
