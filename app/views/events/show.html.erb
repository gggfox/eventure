<section class="show_event">
  <section class="event_section">
    <div class="row title">
    <div class="col col-md-6">
    <aside class="event_section">
    <%= image_tag("#{@event.image_name}.jpg", class: "h-50 w-50") %>
    <div class="media-body ml-3">
      <h1><%= @event.title %></h1>
      <h2 class="text-muted">$<%= @event.price %></h2>
      <h3><%= @event.date.strftime("%d-%m-%Y") %></h3>
      <h3><%= @event.location %></h3>
      <h6><%= @event.desc %></h6>
     <% @event.categories.each do |cat| %>   
         <%= link_to cat.name, "/by_category/#{cat.name}", class: 'link' %>       
    <%end%>
    </div>
    </div>
    </div>
    </div>
  </section>

  <section class="comments">
    <h4 class="title">Comments</h4>
    <div class="row title">
    <% if @event.date < DateTime.now() || current_user.admin? %>
        <%= render :partial => 'comments/form', locals: {user_id: current_user.id, event_id: @event.id} %>
    <%end%>
    </div>
    <%= render @event.comments %>
  </section>
</section>
