<div class="col-md-5 ml-5 mr-5 m-md-auto ">
  <p>
    <div class="user-bkgnd">
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user, class: 'link snow' %>
    <% if current_user.admin? && !current_user?(user) %>
        <%= link_to "Delete", user, method: :delete,
                                    data: { confirm: "You sure?" }, class: 'link btn btns-del deluser' %>
    <%else%>
      <%= link_to "show", user, class: 'link btn show-user btns-del showuser'%>
    <% end %>
    </div>
  <p>
</div>
