<% provide(:title, "Log in") %>

<div class="row h-100 mg-top-3vw">
  <div class=" m-auto login">
    <h1 class="mb-1 mt-1 snow">Log in</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email, class: "snow" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, class: "snow" %>
      <%= f.password_field :password, class: 'form-control' %>
      <div class="center">
      <%= f.label :remember_me, class: "checkbox inline mt-3 snow" do %>
        <%= f.check_box :remember_me %>
        <span> Remember me on this computer</span>
      <%end%>
      </div>

     <div class="center"> <%= f.submit "Log in", class: "btn btn-green btns" %></div>
    <% end %>

    <p class="snow">New user? <%= link_to "Sign up now!", signup_path, class: 'link snow' %></p>
  </div>
</div>
