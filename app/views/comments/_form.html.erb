<%= form_for :comment do |f| %>
    <% @user ||= current_user %>
    <%= f.hidden_field :event_id, :value => @event.id %>
    <%= f.hidden_field :user_id, :value => @user.id %>

    <%= f.label :comment %>
    <%= f.text_field :comment %>

    <%= f.submit "Leave a comment", class: "btn btn-primary" %>
<% end %>